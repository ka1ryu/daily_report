<header class="before_login">
  <div class="logo">
    <%= link_to root_url do %>
      <%= image_tag('logo.png')%>
    <% end %>
  </div>

  <nav>
      <ul class="nav">
        <% if logged_in? %>
          <li class="under"><%= link_to "日報を見る", reports_all_path %></li>
          <li class="under">
            <%= link_to "My page", current_user %>
            <ul>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li><%= link_to "Log out", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% end %>
      </ul>
    </nav>

</header>
